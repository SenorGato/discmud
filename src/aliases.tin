#ALIAS {gt} {
    #IF {"$palming" == "1"} 
        {#IF {"%2" == ""} {palm %1 from main_pack;};
        #ELSE {palm %1 from %2;}
        };
    #ELSE {
        #IF {"%2" == ""} {get %1 from main_pack;};
        #ELSE {get %1 from %2;}
        };
};

#ALIAS {pt} {
